@model ReportCatalog.Web.Models.UserViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<style>
    .text-danger {
        color: red;
    }
</style>

<div class="container">
    <div class="card center-align rounded credentialCard">
        <div class="card-content">
            <div class="row">
                <div class="col s12 l5 m5">
                    <img src="~/HomeTemp/img/signin.svg"
                         alt="signinimg"
                         class="responsive-img" />
                </div>
                <div class="col s12 l7 m7">
                    <h5 class="subTitle">Welcome back!</h5>
                    <form asp-action="Login">
                        <div class="input-field col s12">
                            <input id="username" class="validate" type="text" asp-for="Username" placeholder="Username" required />
                            <label for="username">Username</label>
                        </div>
                        <div class="input-field col s12">
                            <input id="password" class="validate" type="password" asp-for="Password" required />
                            <label for="password">Password</label>
                        </div>
                        <div class="input-field col s12">
                            <span asp-validation-for="UserType" class="text-danger"></span>
                        </div>
                        <div class="center-align">
                            <button class="waves-effect btn blue darken-3 btnRounded">
                                Login
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

